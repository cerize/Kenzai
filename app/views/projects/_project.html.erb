<div class="project-details">
  <h1><%= @project.title %></h1>
  <p><%= @project.description %></p>
  <p>Creator: <%= @project.creator.full_name%></p>
  <p>Starting date: <%= @project.start_date %></p>
  <p>Ending date: <%= @project.end_date %></p>
  <p>
    Team members:
    <% @project.members.each do |member| %>
    <div class="member">
      <%= member.full_name %>
      <%= link_to fa_icon("remove"),
            project_assignment_path(project_id: @project, user_id: member),
            method: :delete,
            data: {confirm: "Are you sure you want to remove this team member?"} %>
      <% if member.is_manager?(@project) %>
      <%=  link_to "Manager", remove_manager_path(project_id: @project, user_id: member), method: :post, :class => "btn btn-default btn-manager", 'data-toggle' => 'tooltip', :title => 'Remove manager'%>
      <% else %>
      <%=  link_to "Manager", add_manager_path(project_id: @project, user_id: member), method: :post, :class => "btn btn-default", 'data-toggle' => 'tooltip', :title => 'Set as manager'%>
      <% end %>
    </div>
    <% end %>
  </p>
  <p> Team manager: </p>



  <%= link_to fa_icon("edit"), edit_project_path(@project), remote: true %>
  <%= link_to fa_icon("trash"),
  project_path(@project),
  method: :delete,
  data: {confirm: "Are you sure you want to delete this project? This action cannot be undone"} %>
</div>
