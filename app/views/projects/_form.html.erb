
<%= simple_form_for @project, remote: @project.persisted? do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :start_date, as: :date_time_picker %>
  <%= f.input :end_date, as: :date_time_picker %>
  <%= f.submit %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('#project_end_date, #project_start_date').datepicker({ dateFormat: 'dd/mm/yy' });
  });
</script>
