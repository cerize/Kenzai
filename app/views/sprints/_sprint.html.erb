
<div class="sprint-details">

  

  <% if can? :manage, (@sprint.project) %>
  <%= link_to fa_icon("edit"), edit_project_sprint_path(@sprint.project, @sprint), remote: true %>
  <%= link_to fa_icon("trash"),
  project_sprint_path(@sprint.project, @sprint),
  method: :delete,
  data: {confirm: "Are you sure you want to delete this sprint? This action cannot be undone"} %>
</div>


  <% end %>

  <em><p>Starts on: <%= @sprint.start_date.strftime("%d/%b/%Y") %> | Ends on: <%= @sprint.end_date.strftime("%d/%b/%Y") %></p></em>
  <p><%= @sprint.description %></p>

<div class="btn-group btn-group-justified">

<div class="btn-group">
  <%= link_to "Planning Meeting", sprint_planning_highlights_path(@sprint), class: "btn btn-link"  %>

</div>
<div class="btn-group">

  <%= link_to "Review Meeting", sprint_review_highlights_path(@sprint), class: "btn btn-link"  %>
</div>

</div>
