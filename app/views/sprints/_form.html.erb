<%= simple_form_for [@project, @sprint] do |f| %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :start_date, :placeholder => 'Select date' %>
<%= f.input :end_date, :placeholder => 'Select date' %>
<%= f.submit %>
<% end %>

<script type="text/javascript">

$(document).ready(function(){
  $('#sprint_end_date, #sprint_start_date').datepicker({ dateFormat: 'dd/mm/yy' });
});

</script>
